<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <ImageView
        android:id="@+id/image_gridviewitem"
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_item_home"
        android:background="@color/button_material_light"
        android:scaleType="fitXY"
        android:src="@drawable/laundry"/>

    <TextView
        android:id="@+id/text_grid_laundrynaem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#42000000"
        android:padding="2dp"
        android:text="LAUNDRY NAME"
        android:textColor="@color/white"
        />

    <TextView
        android:id="@+id/text_grid_dealtext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#80000000"
        android:padding="2dp"
        android:text="Deal text"
        android:textColor="@color/white"
        />

</RelativeLayout>