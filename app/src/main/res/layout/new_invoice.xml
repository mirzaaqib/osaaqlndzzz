<RelativeLayout
    android:id="@+id/main_rel"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgcolor">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/imageView_banner"
        android:layout_marginTop="2dp"
        android:background="@color/btn_bgcolor"
        android:gravity="center"
        android:padding="8dp"
        android:text="Laundry"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/white"/>


    <ScrollView
        android:id="@+id/text_scroll"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_below="@+id/textView1"
        android:labelFor="@id/textView1">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingMultiplier="1.2"
            android:padding="10dp"
            android:text=" "
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/text_color"/>
    </ScrollView>

    <TextView
        android:id="@+id/main_invoice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_scroll"
        android:layout_centerInParent="true"
        android:background="@color/btn_bgcolor_dark"
        android:gravity="center"
        android:padding="5dp"
        android:text="Items Detail"
        android:textColor="@color/white"
        />

    <ListView
        android:id="@+id/listView1_men"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/button1"
        android:layout_below="@id/main_invoice"
        android:layout_marginBottom="1dp"
        android:layout_marginTop="1dp"
        android:background="@color/bgcolor"
        android:divider="@color/bgcolor"
        android:dividerHeight="1dp"/>

    <Button
        android:id="@+id/button1"
        android:paddingRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="33dp"
        android:drawableLeft="@drawable/rating_star"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:background="@color/btn_bgcolor"
        android:text="Rate Laundry"
        android:textColor="@color/white"/>

</RelativeLayout>